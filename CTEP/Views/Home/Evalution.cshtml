
@{
    ViewBag.Title = "Evalution";
}
@section style{


    #efList .alert {
    width: 14rem;
    }

    #efList .card {
    border: 1px solid gray;
    border-radius: 1rem;
    width: 14rem;
    font-size: small;
    }
    .card-body .table{
    margin: 0 auto;
    }



}


<div id="efList" class="container  justify-content-around  d-flex mb-3 flex-wrap">
